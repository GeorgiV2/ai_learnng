import matplotlib.pyplot as plt

# Sample data
x = [1, 2, 3, 4, 5]
y = [2, 4, 6, 8, 10]

#The figure serves as a container for the plot and all its elements.
fig = plt.figure()

# Adding an axis to the figure. This defines a single subplot
# within the figure grid with one row, one column, and the first position.
ax = fig.add_subplot(1, 1, 1)

# Plotting the data
ax.plot(x, y)

# Adding labels and title
ax.set_xlabel('X-axis')
ax.set_ylabel('Y-axis')
ax.set_title('Simple Line Plot')

# Display the plot
plt.show()

